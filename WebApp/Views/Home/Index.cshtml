@{
    ViewData["Title"] = "Home Page";
}

<style>
    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .animate-spin {
        animation: spin 1s linear infinite;
    }
</style>

<section id="head">
    <div style="display:flex; align-items: center; justify-content: space-between;">
        <div class="">
            <h1 style="font-weight:bold;color:darkgrey; font-size:2.5rem; line-height:2rem;">
                Crafting Digital Media Solutions.
            </h1>
            <p style="margin-top:2rem; font-size:1.25rem; line-height:1.7rem; color:lightgrey; font-style:italic;">
                Committed to providing the performant software solutions
            </p>
        </div>
        <a href="/" style="display: block; position:relative;">
            <svg viewBox="0 0 200 200"
                 width="200"
                 height="200"
                 class="animate-spin"
                 style="font-size:1.125rem; line-height:1.75rem; letter-spacing: 0.1em; animation-duration: 10s">
                <path id="circlePath"
                      d="M 100, 100 m -75, 0 a 75,75 0 1,1 150,0 a 75,75 0 1,1 -150,0"
                      fill-opacity="8%"
                      fill="#ececec" />
                <text>
                    <textPath href="#circlePath" startOffset="12%">@await Html.PartialAsync("_CompanyName")</textPath>
                    <textPath href="#circlePath" startOffset="55%">
                        Digital Media
                    </textPath>
                </text>
            </svg>
            <button style="position:absolute; top:0px; left:0px; right:0; bottom: 0; margin:auto; width:5rem; height:5rem; border-radius: 9999px;--tw-bg-opacity: 1;background-color: rgb(30 64 175 / var(--tw-bg-opacity, 1)); display:flex; align-items:center; justify-content:center; border:none;">
                <svg xmlns="http://www.w3.org/2000/svg"
                     viewBox="0 0 24 24"
                     width="50"
                     height="50"
                     fill="none"
                     stroke="white"
                     strokeWidth="2">
                    <line x1="6" y1="18" x2="18" y2="6" />
                    <polyline points="9 6 18 6 18 15" />
                </svg>
            </button>
        </a>
    </div>
</section>
